{
  "manifest_version": 2,

  "name": "Jian Begone",
  "description": "a chrome extension to let us ignore jian ghomeshi and get on with our lives",
  "version": "1.0",

  "permissions": [

  ],

  "background": {
    "scripts": ["jquery-2.1.1.min.js", "background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
        "matches": ["http://*/*"],
        "js": ["jquery-2.1.1.min.js", "replace.js"],
        "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_title": "Jian Begone",
    "default_icon": "icon.png",
    "default_popup": "jian.html"
  }
}
