{
  "manifest_version": 2,

  "name": "Jian Begone",
  "description": "a chrome extension to let us put the focus back on the real issue of the Jian Ghomeshi saga.",
  "version": "0.2.1",

  "icons": {
    "16":  "icon-16.png",
    "48":  "icon-48.png",
    "128": "icon-128.png"
  },

  "permissions": [
    "tabs", "webNavigation", "activeTab"
  ],

  "content_scripts": [
    {
        "matches": ["http://*/*"],
        "js": ["jquery-2.1.1.min.js", "replace.js"],
        "run_at": "document_end"
    }
  ]

}
